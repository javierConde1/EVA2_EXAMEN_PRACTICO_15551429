<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mainIV"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            app:srcCompat="@drawable/cafelore" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/nombreTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restaurante 1"
                android:textAppearance="@android:style/TextAppearance.Holo.SearchResult.Title" />

            <TextView
                android:id="@+id/descripcionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion 1" />

            <TextView
                android:id="@+id/direccionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion 1" />
        </LinearLayout>

        <ImageView
            android:id="@+id/star1IV"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            app:srcCompat="@drawable/star_full" />

        <ImageView
            android:id="@+id/star2IV"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            app:srcCompat="@drawable/star_full" />

        <ImageView
            android:id="@+id/star3IV"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            app:srcCompat="@drawable/star_full" />
    </LinearLayout>
</LinearLayout>